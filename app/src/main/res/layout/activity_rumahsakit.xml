<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#6571fd"
    tools:context=".rumahsakit">

    <ImageView
        android:id="@+id/rsbwh"
        android:layout_width="match_parent"
        android:layout_height="664dp"
        android:layout_alignParentBottom="true"
        android:layout_marginLeft="0dp"
        android:layout_marginRight="0dp"
        android:layout_marginBottom="-56dp"
        app:srcCompat="@drawable/bgnew" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="338dp"
        android:layout_alignTop="@+id/rsbwh"
        android:layout_marginTop="100dp"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/rs1"
            android:layout_width="354dp"
            android:layout_height="38dp"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:layout_weight="1"
            android:src="@drawable/sudirman" />

        <ImageView
            android:id="@+id/rs2"
            android:layout_width="354dp"
            android:layout_height="38dp"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="-25dp"
            android:layout_marginRight="15dp"
            android:layout_weight="1"
            android:src="@drawable/medika" />

        <ImageView
            android:id="@+id/rs3"
            android:layout_width="354dp"
            android:layout_height="38dp"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="-25dp"
            android:layout_marginRight="15dp"
            android:layout_weight="1"
            android:src="@drawable/sruweng" />
    </LinearLayout>

    <TextView
        android:id="@+id/textregis"
        android:layout_width="match_parent"
        android:layout_height="49dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="120dp"
        android:gravity="center_horizontal"
        android:text="Rumah Sakit Terdekat"
        android:textColor="#6672ff"
        android:textSize="30sp"
        android:textStyle="bold" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Rumah Sakit"
        android:textStyle="bold"
        android:textColor="#000000"
        android:background="#FFFFFF"
        android:textAlignment="center"
        android:layout_marginTop="0dp"
        android:padding="8dp"
        android:textSize="20dp"/>
</RelativeLayout>