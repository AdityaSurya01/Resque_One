<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#6571fd"
    tools:context=".menu">

    <ImageView
        android:id="@+id/homebwh"
        android:layout_width="match_parent"
        android:layout_height="504dp"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="122dp"
        app:srcCompat="@drawable/homebawah" />
    <ImageView
        android:id="@+id/rsbwh2"
        android:layout_width="match_parent"
        android:layout_height="569dp"
        android:layout_marginTop="-5dp"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="-30dp"
        app:srcCompat="@drawable/ners" />

    <ImageView
        android:id="@+id/searchIcon"
        android:layout_width="347dp"
        android:layout_height="76dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="23dp"
        android:src="@drawable/ic_search" />

    <EditText
        android:id="@+id/searchEditText"
        android:layout_width="347dp"
        android:layout_height="76dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:hint="Cari Rumah Sakit di Kebumen . . ."
        android:imeOptions="actionSearch"
        android:inputType="text" />


    <LinearLayout
        android:layout_width="382dp"
        android:layout_height="399dp"
        android:layout_alignBottom="@+id/homebwh"
        android:layout_marginBottom="18dp"
        android:orientation="vertical">

        <ImageView
            android:layout_width="354dp"
            android:layout_height="38dp"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:layout_weight="1"
            android:id="@+id/berita"
            android:src="@drawable/histori" />

        <ImageView
            android:id="@+id/rs"
            android:layout_width="354dp"
            android:layout_height="38dp"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="-25dp"
            android:layout_marginRight="15dp"
            android:layout_weight="1"
            android:src="@drawable/rs" />

        <ImageView
            android:id="@+id/lapor"
            android:layout_width="354dp"
            android:layout_height="38dp"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="-25dp"
            android:layout_marginRight="15dp"
            android:layout_weight="1"
            android:src="@drawable/lapor" />

        <ImageView
            android:id="@+id/histori"
            android:layout_width="354dp"
            android:layout_height="38dp"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="-25dp"
            android:layout_marginRight="15dp"
            android:layout_weight="1"
            android:src="@drawable/berita" />

    </LinearLayout>

    <TextView
        android:id="@+id/textregis"
        android:layout_width="match_parent"
        android:layout_height="49dp"
        android:layout_alignTop="@+id/homebwh"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="27dp"
        android:gravity="center_horizontal"
        android:text="Layanan Kami "
        android:textColor="#6672ff"
        android:textSize="35sp"
        android:textStyle="bold" />

</RelativeLayout>
