<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <ImageView
        android:id="@+id/ivlogin"
        android:layout_width="match_parent"
        android:layout_height="394dp"
        android:layout_marginTop="-20dp"
        android:layout_alignParentTop="true"
        app:srcCompat="@drawable/iv1" />

    <TextView
        android:id="@+id/textlp"
        android:layout_width="match_parent"
        android:layout_height="49dp"
        android:layout_below="@id/ivlogin"
        android:layout_gravity="center_horizontal"
        android:gravity="center_horizontal"
        android:text="Lupa Password?"
        android:layout_marginTop="20dp"
        android:textColor="#6672ff"
        android:textSize="35sp"
        android:textStyle="bold" />

    <EditText
        android:id="@+id/inputemaillp"
        android:layout_width="343dp"
        android:layout_height="53dp"
        android:layout_below="@id/textlp"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="50dp"
        android:layout_marginBottom="5dp"
        android:layout_marginEnd="50dp"
        android:layout_marginTop="20dp"
        android:background="@drawable/edittext_bg"
        android:drawableStart="@drawable/email"
        android:drawablePadding="12dp"
        android:ems="10"
        android:hint="Masukan Email"
        android:inputType="textPersonName"
        android:paddingTop="5dp"
        android:paddingBottom="5dp"
        android:textColorHint="#3B608C"
        android:textSize="20sp" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Send Riset Link"
        android:layout_below="@id/inputemaillp"
        android:layout_centerHorizontal="true"
        android:background="@drawable/bt_shape"
        android:width="300dp"
        android:textColor="@color/white"
        android:textSize="18sp"
        android:id="@+id/btriset"
        android:layout_marginTop="25dp"
        android:fontFamily="@font/poppinssemibold" />

    <TextView
        android:id="@+id/lupapw"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/btriset"
        android:layout_marginStart="25dp"
        android:layout_marginTop="100dp"
        android:layout_marginEnd="25dp"
        android:layout_marginRight="78dp"
        android:layout_marginBottom="25dp"
        android:fontFamily="@font/poppinssemibold"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:text="cek kotak masuk email anda!"
        android:textColor="@color/second"
        android:textSize="15sp" />

</RelativeLayout>